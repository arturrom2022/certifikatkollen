{
  "name": "certifikatkollen",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.9.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel --filter \"./apps/*\" run dev",
    "dev:platform": "pnpm --filter platform dev",
    "dev:marketing": "pnpm --filter marketing dev",
    "build": "pnpm -r --filter \"./apps/*\" run build",
    "start:platform": "pnpm -F platform start",
    "start:marketing": "pnpm -F marketing start",
    "lint": "pnpm -r --filter \"./apps/*\" run lint",
    "fmt": "prettier --write .",
    "db:generate": "pnpm --filter platform run db:generate",
    "db:push": "pnpm --filter platform run db:push",
    "db:migrate": "pnpm --filter platform run db:migrate",
    "db:studio": "pnpm --filter platform run db:studio",
    "postinstall": "pnpm -C apps/platform prisma generate --schema prisma/schema.prisma"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prisma": "^6.16.2"
  },
  "dependencies": {
    "@prisma/client": "6.16.2"
  }
}
